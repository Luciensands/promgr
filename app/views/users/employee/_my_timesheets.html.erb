<div class="div5 daily ms-5 mb-4 boxes p-3">
  <h5 class="text-light">My Daily Activities</h5>
  <div class="container d-flex flex-row justify-content-evenly p-3">
    <div class="col me-4 flex-fill">
      <div class="text-center">
        <h5>Date</h5>
      </div>
      <% @my_timesheets.first(10).each do |timesheet| %>
        <li><%= timesheet.time_in.strftime('%Y-%m-%d (%a)') %></li>
      <% end %>
    </div>
    <div class="col ms-3 flex-fill text-center">
      <h5>Clock in</h5>
      <% @my_timesheets.first(10).each do |timesheet| %>
        <% if timesheet.time_in.nil? %>
          <li>Missing</li>
        <% else %>
          <li><%= timesheet.time_in.strftime('%l:%M %p') %></li>
        <% end %>
      <% end %>
    </div>
    <div class="col flex-fill text-center">
      <h5>Clock out</h5>
      <% @my_timesheets.first(10).each do |timesheet| %>
        <% if timesheet.time_out.nil? %>
          <li>Missing</li>
        <% else %>
          <li> <%= timesheet.time_out.strftime('%l:%M %p')  %></li>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
