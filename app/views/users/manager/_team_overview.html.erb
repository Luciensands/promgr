<div class="div5 boxes text-white p-5 mx-5 mb-5">
  <div class= "d-flex justify-content-between align-items-center mb-4">
    <h5> Team Overview</h5>
    <button type="button" class="btn btn-button-color" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">Add Task</button>
    <%= render 'users/addtaskform' %>
  </div>
  <div class="table-wrapper-scroll-y my-custom-scrollbar">
    <table class="table text-white">
      <thead>
        <tr>
          <th scope="col" class="col-4"></th>
          <th scope="col" class="col-2">
            <span>Total Overtime</span><br>
            <span> this month</span>
          </th>
          <th scope="col" class="col-2">
            <span>Ongoing</span><br>
            <span>Tasks</span>
          </th>
          <th scope="col" class="col-2">
            <span>Completed</span><br>
            <span>Tasks</span>
          </th>
          <th scope="col" class="col-2"></th>
        </tr>
      </thead>
      <tbody class="table-body">
        <% @users.each do |user| %>
          <% unless user.is_manager %>
            <tr>
              <th scope="row">
                <div class="d-flex">
                  <%= cl_image_tag user.photo.key, class: "avatar-bordered shadow me-3" %>
                  <div>
                    <span><%= user.name %></span><br>
                    <span><%= user.job_title %></span>
                  </div>
                </div>
              </th>
              <% employee_overtime = 0 %>
              <% user.timesheets.each do |timesheet| %>
                <% if timesheet.time_out %>
                  <% differences = timesheet.time_out - timesheet.time_in %>
                  <% employee_overtime += differences - 32_400 if differences > 32_400 %>
                <% end %>
              <% end %>
              <td><%= (employee_overtime/ 3600).round(1) %></td>
              <td><%= user.tasks.where(status: "In Progress").count %></td>
              <td><%= user.tasks.where(status: "done").count %></td>
              <td class="pe-0">
                <div class="d-flex justify-content-end align-items-center">
                  <%= link_to "View Profile", user_path(user), class:"btn btn-button-color my-auto" %>
                  <%# <button type="button" class="btn btn-secondary my-auto">View Profile</button> %>
                </div>
              </td>
            </tr>
          <%end%>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
