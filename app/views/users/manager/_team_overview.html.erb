<div class="div5 team-overview p-4 bg-white m-5">
  <div class= "d-flex justify-content-between align-items-center">
    <h5> Team Overview</h5>
    <button type="button" class="btn btn-primary">Add task</button>
  </div>
  <div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col" class="col-4"></th>
          <th scope="col" class="col-2">
            <span>Total overtime</span><br>
            <span> this time</span>
          </th>
          <th scope="col" class="col-2">
            <span>Ongoing</span><br>
            <span>tasks</span>
          </th>
          <th scope="col" class="col-2">
            <span>Completed</span><br>
            <span>tasks</span>
          </th>
          <th scope="col" class="col-2"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <th scope="row">
              <div class="d-flex">
                <div>
                  <%# image %>
                </div>
                <div>
                  <span><%= user.name %></span><br>
                  <span><%= user.job_title %></span>
                </div>
              </div>
            </th>
            <td>2hrs</td>
            <td>2 tasks</td>
            <td>10 tasks</td>
            <td class="pe-0">
              <div class="d-flex justify-content-end align-items-center">
                <button type="button" class="btn btn-secondary my-auto">View Profile</button>
              </div>
            </td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
