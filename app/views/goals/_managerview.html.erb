<h1><%=@user.name %> Goals</h1>
    <div class="row ">
    <div class="col goals-list p-5">


       <div class="container d-flex flex-column gap-3">

     <div><h1><%=@user.name %> goals for 2023</h1>
      <% @goals.each do |goal|%>
      <div class="container">
      <div class="row rounded text-dark bg-light mb-2">
         <div class="col d-flex align-items-center justify-content-between p-1">
            <div><%=goal.title%></div>  <div><%=goal.status%></div>
         </div>
      </div>
      <div class="row rounded text-dark bg-light" style="height:200px">
         <div class="col d-flex align-items-center justify-content-between p-1">
              <p> <%=goal.description%></p>
         </div>
      </div>
        </div>
      <% end%>

    </div>
      </div>

    </div>
